{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@script/*": ["./src/script/*"],
      "@media/*": ["./src/media/*"],
      "@video/*": ["./src/video/*"],
      "@audio/*": ["./src/audio/*"],
      "@text/*": ["./src/text/*"],
      "@cli/*": ["./src/cli/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./config/*"],
      "@templates/*": ["./templates/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}